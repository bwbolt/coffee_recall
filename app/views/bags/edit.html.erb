<%= form_with url: "/bags/#{@bag.id}", method: :patch, local: true do |form| %>
<%= form.label :roast %>
<%= form.text_field :roast, value: @bag.roast %><br>
<%= form.label :size %>
<%= form.text_field :size, value: @bag.size %><br>
<%= form.label :ground %>
<%= form.check_box :ground%><br>
<%= form.submit %>
<% end %>